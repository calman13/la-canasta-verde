<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Shops</h1>
        <div class="row">
          <div class="col">
            <% if @query %>
              <p>You searched for <strong><%= @query %></strong>. We found <%= @shops.count %> shops out of our <%= Shop.count %> on our website.</p>
            <% else %>
              <p>All <%= Shop.count %> shops.</p>
            <% end %>
          </div>
        </div>


      <ol>

        <% @shops.each do |shop| %>
          <li><%= link_to shop.name, shop_path(shop), class: 'btn btn-danger ml-2' %><%= shop.name.capitalize %></li>
        <% end %>
      </ol>
    </div>
  </div>
</div>