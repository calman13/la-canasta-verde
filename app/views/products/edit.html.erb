<div class="container mt-3">
  <h1 class="text-center"> Editar Producto</h1>
<div class="container">
 <div class="border p-5 mt-2" >
  <%= simple_form_for @product do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :amount %>
    <%= f.input :price %>
    <%= f.input :image, as: :file %>
    <%= f.submit "Subir producto", class:"btn btn-add" %>
  <% end %>
</div>
</div>
</div>