
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><p><%= link_to  @product.shop.name, shop_path(@product.shop) %> </p></h1>
        <h5 class="modal-title" id="exampleModalLongTitle"><%= @product.shop.user.phone %></h5>
        <h5 class="modal-title" id="exampleModalLongTitle"><%= @product.shop.user.address %></h5>
