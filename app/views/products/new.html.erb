<div class="container mt-3">
  <h1 class="text-center"> Crear Producto</h1>
<div class="container">
 <div class="border p-5 mt-2" >
  <%= simple_form_for([@shop, @product]) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :amount %>
    <%= f.input :price %>
    <%= f.input :image, as: :file %>
    <%= f.button :submit %>
  <% end %>
</div>
</div>
</div>